{
  "name": "elefante-grounding",
  "displayName": "Elefante Grounding",
  "description": "Automatically injects relevant memories from Elefante into AI chat context",
  "version": "0.1.0",
  "publisher": "elefante",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsubiabreIBM/Elefante"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "elefante.grounding",
        "name": "elefante",
        "fullName": "Elefante Memory",
        "description": "Grounds AI responses with your stored memories",
        "isSticky": false
      }
    ],
    "configuration": {
      "title": "Elefante Grounding",
      "properties": {
        "elefante.grounding.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic memory grounding for all chat messages"
        },
        "elefante.grounding.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Elefante dashboard server URL (default: http://localhost:8000)"
        },
        "elefante.grounding.minSimilarity": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum similarity score to inject a memory into context"
        },
        "elefante.grounding.maxResults": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of memories to inject per message"
        },
        "elefante.grounding.cacheTtlSeconds": {
          "type": "number",
          "default": 300,
          "description": "How long to cache search results (seconds)"
        },
        "elefante.grounding.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notification when memories are injected"
        }
      }
    },
    "commands": [
      {
        "command": "elefante.grounding.toggle",
        "title": "Elefante: Toggle Grounding"
      },
      {
        "command": "elefante.grounding.clearCache",
        "title": "Elefante: Clear Memory Cache"
      },
      {
        "command": "elefante.grounding.testConnection",
        "title": "Elefante: Test Server Connection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
